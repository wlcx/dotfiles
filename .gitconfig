[user]
    name = Sam Willcocks
    email = sam@wlcx.cc
[core]
	editor = vim
    pager = "diffr | less -R"
[alias]
    a = add
    ap = add -p
    ci = commit
    cia = commit --amend
    cim = commit -m
    co = checkout
    d = diff
    dc = diff --cached
    fp = fetch -p
    log = log --show-signatures
    r = rebase --autostash
    ri = rebase -i --autostash
    st = status -bs
[push]
    default = matching
[color]
    ui = auto
[include]
    path = ~/.gitconfig.local
[branch]
    sort = -committerdate
[interactive]
	diffFilter = diffr  # fails gracefully with an error

